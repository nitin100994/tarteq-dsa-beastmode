Code Example ğŸ’»

let arr = [10, 20, 30, 40];

// Traversal
for (let i = 0; i < arr.length; i++) {
    console.log(arr[i]);
}

// Search
let target = 30;
for (let i = 0; i < arr.length; i++) {
    if (arr[i] === target) {
        console.log(`Found at index ${i}`);
    }
}


